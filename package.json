{
  "private": true,
  "name": "my-nextron-app",
  "description": "My application description",
  "version": "1.0.0",
  "author": "Yoshihide Shiono <shiono.yoshihide@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev:find-ip": "tsx watch scripts/find-ip.ts",
    "dev": "nextron",
    "build": "nextron build",
    "build:win": "nextron build --win --x64",
    "build:win32": "nextron build --win --ia32",
    "build:all": "nextron build --all",
    "postinstall": "electron-builder install-app-deps",
    "next:dev": "next dev"
  },
  "build": {
    "appId": "com.everwood.control",
    "productName": "Everwood CNC Controller",
    "copyright": "Copyright Â© 2024 Everwood",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ]
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-progress": "^1.1.5",
    "@radix-ui/react-radio-group": "^1.3.5",
    "@radix-ui/react-select": "^2.2.3",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.1",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.10",
    "@radix-ui/react-toast": "^1.2.12",
    "@serialport/bindings-cpp": "^13.0.1",
    "@serialport/list": "^13.0.0",
    "@serialport/stream": "^13.0.0",
    "chalk": "^4.1.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "framer-motion": "^12.9.4",
    "immer": "^10.1.1",
    "lucide-react": "^0.395.0",
    "mongodb": "^6.16.0",
    "next-themes": "^0.3.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "next": "^14.2.4",
    "nextron": "^9.0.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serialport": "^13.0.0",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.4",
    "typescript": "^5.4.5"
  }
}
